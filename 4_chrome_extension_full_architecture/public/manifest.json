{
  "manifest_version": 3,
  "name": "Chrome Extension Full Architecture",
  "description": "Full Architecture",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "js": ["content.js"]
    }
  ],
  "permissions": ["storage", "activeTab", "contextMenus"]
}
